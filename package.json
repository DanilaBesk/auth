{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=development tsx src/index.ts",
    "start:prod": "npx prisma generate && npm run build && cross-env NODE_ENV=production node dist/src/index.js",
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "build": "cross-env NODE_ENV=production rimraf ./dist && tsc --project tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "test:unit": "cross-env NODE_ENV=test jest --config jest.config.unit.ts --runInBand",
    "test:all": "npm run test:unit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --config .prettierrc src/**/*.ts --write",
    "prepare": "husky",
    "migrate:create": "prisma migrate dev --create-only --name"
  },
  "keywords": [],
  "author": "Danila Beskorovaev <danilbeskorovaev546@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.0.1",
    "multer": "1.4.5-lts.1",
    "nanoid": "^5.0.7",
    "nodemailer": "^6.9.12",
    "redis": "^4.7.0",
    "sharp": "^0.33.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.5.1",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.25",
    "@types/nodemailer": "^6.4.15",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "prettier": "^3.2.5",
    "prisma": "^5.21.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3"
  },
  "type": "module"
}
